package com.techlabs.model;

public class Board {
	
	private int size;
	private char[][] board;
	public Board(int size, char[][] board) {
		super();
		this.size = size;
		this.board = board;
		clearBoard();
	}
	
	public void clearBoard() {
		for(int i=0; i<board.length; i++) {
			for(int j=0; j<board[1].length;j++) {
				board[i][j] ='-';
			}
		}
	}

	public void printBoard() {
		for(int i=0; i<board.length; i++) {
			for(int j=0; j<board[1].length;j++) {
				System.out.print(board[i][j] +" ");
			}
			System.out.println();
		}
	}

	
	
	

}
