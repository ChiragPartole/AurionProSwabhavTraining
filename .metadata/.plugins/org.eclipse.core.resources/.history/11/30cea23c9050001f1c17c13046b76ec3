package com.techlabs.behavioural.test;

import java.util.ArrayList;
import java.util.List;

import com.techlabs.behavioural.model.Account;
import com.techlabs.behavioural.model.EmailNotifier;
import com.techlabs.behavioural.model.INotifiers;
import com.techlabs.behavioural.model.SMSNotifier;

public class AccountTest {

	public static void main(String[] args) {
		
		List<INotifiers> notifiers = new ArrayList<INotifiers>();
		
		notifiers.add(new SMSNotifier());
		notifiers.add(new EmailNotifier());
		Account account = new Account(1,"Chirag",1000,notifiers);

		account.registerNotifier(notifiers);
		
		account.deposit(100);
	}

}
