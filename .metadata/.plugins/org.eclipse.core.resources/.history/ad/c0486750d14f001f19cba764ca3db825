package com.techlabs.structural.adapter.model;

import java.util.List;

public class ShoppingCart {
	
	private List<IItems> cartItems;

	public ShoppingCart(List<IItems> cartItems) {
		super();
		this.cartItems = cartItems;
	}


	public void setCartItems(List<IItems> cartItems) {
		this.cartItems = cartItems;
	}
	
	public void addItemtoCart(IItems item)
	{
		cartItems.add(item);
	}
	
	public void getCartItems()
	{
		for(IItems item : cartItems)
			System.out.println(item.getItemName());
	}
	
	public void getCartPrice()
	{
		for(IItems item : cartItems)
			System.out.println(item.getItemPrice());
	}
	
	public void displayCart()
	{
		for(IItems item : cartItems)
			System.out.println(getCartItems() + "   "+ getCartPrice());
	}

}
